<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2ca37"
    tools:context=".thirdyear">
    <ImageView
        android:layout_width="1000dp"
        android:layout_height="250dp"
        android:background="@drawable/whitecircle"
        android:layout_marginTop="180dp"
        android:layout_marginStart="-300dp"
        android:layout_marginEnd="10dp"
        android:rotation="-45"/>
        <TextView
            android:id="@+id/s5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/opensansbold"
            android:text="@string/fifth_semester"
            android:textColor="#111111"
            android:textSize="25sp" />

        <Button
            android:id="@+id/php"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_below="@+id/s5"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/cn"
            android:background="@drawable/gradient1"
            android:fontFamily="@font/opensansbold"
            android:text="@string/php_and_mysql"
            android:textColor="#fff" />

        <Button
            android:id="@+id/cn"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_below="@+id/s5"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/gradient2"
            android:fontFamily="@font/opensansbold"
            android:text="Computer Networks"
            android:textColor="#fff" />

    <Button
        android:id="@+id/os"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_below="@+id/cn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/gradient3"
        android:fontFamily="@font/opensansbold"
        android:text="@string/operating_system"
        android:textColor="#fff" />

    <Button
        android:id="@+id/set"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_below="@+id/cn"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/os"
        android:background="@drawable/gradient4"
        android:fontFamily="@font/opensansbold"
        android:text="Software Engineering and Testing"
        android:textColor="#fff" />

    <Button
        android:id="@+id/mis"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_below="@+id/set"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/km"
        android:background="@drawable/gradient5"
        android:fontFamily="@font/opensansbold"
        android:text="Management Information System And ERP"
        android:textColor="#fff" />

    <Button
        android:id="@+id/km"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_below="@+id/set"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/gradient2"
        android:fontFamily="@font/opensansbold"
        android:text="Knowledge Management"
        android:textColor="#fff" />

        <Button
            android:id="@+id/evs"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_below="@+id/mis"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/gradient2"
            android:fontFamily="@font/opensansbold"
            android:text="Environmental Studies"
            android:textColor="#fff" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView115"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9384783085331384/5899237284">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>