<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient6"
    tools:context=".spcalc">
    <Button
        android:id="@+id/spcalcinfobutton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="@android:drawable/ic_menu_help" />



    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Grade Estimator"
        android:textColor="@color/btwhite"
        android:fontFamily="@font/opensansbold"
        android:textStyle="bold"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/opensansbold"
        android:text="Cycle Test 1"
        android:textColor="@color/btwhite"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="Cycle Test 2"
        android:textColor="@color/btwhite"
        android:fontFamily="@font/opensansbold"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"
        android:layout_alignParentStart="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="40dp"
        android:text="Model Exam"
        android:textColor="@color/btwhite"
        android:fontFamily="@font/opensansbold"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView18"
        android:layout_alignParentStart="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="40dp"
        android:text="Extra"
        android:textColor="@color/btwhite"
        android:fontFamily="@font/opensansbold"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView19"
        android:layout_alignParentStart="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="40dp"
        android:text="Semester"
        android:textColor="@color/btwhite"
        android:fontFamily="@font/opensansbold"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/ct1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/textView16"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:fontFamily="@font/opensansbold"
        android:gravity="center"
        android:hint="(Out of 50)"
        android:inputType="number"
        android:maxLength="2"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/ct2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ct1"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/textView16"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:fontFamily="@font/opensansbold"
        android:gravity="center"
        android:hint="(Out of 50)"
        android:inputType="number"
        android:maxLength="2"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/model"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ct2"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/textView16"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:fontFamily="@font/opensansbold"
        android:gravity="center"
        android:hint="(Out of 100)"
        android:inputType="number"
        android:maxLength="3"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/extra"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/model"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/textView16"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:fontFamily="@font/opensansbold"
        android:gravity="center"
        android:hint="(Out of 10)"
        android:inputType="number"
        android:maxLength="2"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/semester"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/extra"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/textView16"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:fontFamily="@font/opensansbold"
        android:gravity="center"
        android:hint="(Out of 100)"
        android:inputType="number"
        android:maxLength="3"
        android:textColor="#ffffff" />



    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/semester"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/grade"
        android:fontFamily="@font/opensansbold"
        android:text="Your Mark:"
        android:textColor="@color/btwhite" />

    <TextView
        android:id="@+id/grade"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/semester"
        android:layout_alignEnd="@+id/spcalcbtn"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="31dp"
        android:fontFamily="@font/opensansbold"
        android:textColor="@color/btwhite"/>

    <TextView
        android:id="@+id/grade2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grade"
        android:layout_alignEnd="@+id/spcalcbtn"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="31dp"
        android:fontFamily="@font/opensansbold"
        android:textColor="@color/btwhite" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/grade"
        android:fontFamily="@font/opensansbold"
        android:text="Your Grade:"
        android:textColor="@color/btwhite" />
    <Button
        android:id="@+id/spcalcbtn"
        android:layout_width="242dp"
        android:layout_height="28dp"
        android:layout_below="@+id/textView22"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="@drawable/btn1"
        android:fontFamily="@font/opensansbold"
        android:text="@string/calculate"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/spcalcreset"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_below="@+id/spcalcbtn"
        android:layout_alignEnd="@+id/spcalcbtn"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/btn1"
        android:fontFamily="@font/opensansbold"
        android:text="@string/reset"
        android:textSize="15sp"
        android:textAllCaps="false"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9384783085331384/5899237284">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>