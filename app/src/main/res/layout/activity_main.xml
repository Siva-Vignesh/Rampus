<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/mainbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient5">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/navigation"
                    android:layout_width="30dp"
                    android:layout_height="22dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="36dp"
                    android:background="@android:drawable/ic_menu_sort_by_size" />

                <ImageView
                    android:id="@+id/bcalite"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/sublogo" />

                <Button
                    android:id="@+id/update"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/rocket" />

                <HorizontalScrollView
                    android:id="@+id/news"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/bcalite"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="7dp"
                    android:background="#ffffff"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/no1"
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/notes" />

                        <Button
                            android:id="@+id/no"
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/placement" />

                        <Button
                            android:id="@+id/no2"
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/advantage" />

                        <Button
                            android:id="@+id/no3"
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"

                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/calc" />

                        <Button
                            android:id="@+id/no4"
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/googledrive" />
                    </LinearLayout>
                </HorizontalScrollView>
                <HorizontalScrollView
                    android:id="@+id/themelayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#fff"
                    android:layout_below="@id/news">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <Button
                        android:id="@+id/gradient1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/theme1"
                        android:layout_marginStart="10dp"
                       />
                    <Button
                        android:id="@+id/gradient2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/theme2"
                        android:layout_marginStart="10dp"/>
                    <Button
                        android:id="@+id/gradient3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/theme3"
                        android:layout_marginStart="10dp"/>
                    <Button
                        android:id="@+id/gradient4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/theme4"
                        android:layout_marginStart="10dp"/>
                    <Button
                        android:id="@+id/gradient5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/theme5"
                        android:layout_marginStart="10dp"/>
                    <Button
                        android:id="@+id/gradient6"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/theme6"
                        android:layout_marginStart="10dp"/>
                    <Button
                        android:id="@+id/gradient7"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/theme7"
                        android:layout_marginStart="10dp"/>
                    <Button
                        android:id="@+id/gradient8"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/theme8"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>
                </LinearLayout>
                </HorizontalScrollView>
                <TextView
                    android:id="@+id/day_special"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/themelayout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/notch"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="Siva Vignesh"
                    android:textSize="13dp"
                    android:onClick="onClick"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/themelayout"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/opensansbold"
                    android:text="Wishes"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView"
                    android:fontFamily="@font/opensansbold"
                    android:textSize="15dp"
                    android:textColor="#fff"
                    android:layout_marginStart="20dp"/>

                <DigitalClock
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_alignEnd="@id/name"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/fidgetspinner"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/themelayout"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="50dp"
                    android:background="@drawable/wings" />

                <Button
                    android:id="@+id/base"
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/fidgetspinner"
                    android:layout_alignStart="@+id/fidgetspinner"
                    android:layout_alignEnd="@+id/fidgetspinner"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="-20dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/base" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignTop="@+id/button2"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toStartOf="@+id/button2"
                    android:background="@drawable/btn1"
                    android:fontFamily="@font/opensansbold"
                    android:gravity="center"
                    android:text="@string/notes"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/base"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/btn1"
                    android:fontFamily="@font/opensansbold"
                    android:gravity="center"
                    android:text="@string/placement"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="350dp"
                    android:layout_height="75dp"
                    android:layout_below="@+id/button2"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="23dp"
                    android:background="@drawable/btn1"
                    android:fontFamily="@font/opensansbold"
                    android:text="SRM Websites"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/button3"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn1"
                    android:fontFamily="@font/opensansbold"
                    android:text="SGPA Calculator"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/button3"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/button4"
                    android:background="@drawable/btn1"
                    android:fontFamily="@font/opensansbold"
                    android:text="CGPA Calculator"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="350dp"
                    android:layout_height="75dp"
                    android:layout_below="@+id/button5"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/btn1"
                    android:fontFamily="@font/opensansbold"
                    android:text="@string/grade_estimator"
                    android:textAllCaps="false"
                    android:textSize="15dp" />

                <com.google.android.gms.ads.AdView
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/adView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/button6"
                    ads:adSize="BANNER"
                    ads:adUnitId="ca-app-pub-9384783085331384/5899237284"
                    android:radius="10dp"/>      

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_below="@id/adView"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="50dp"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/quoteoftheday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/divider"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/opensansbold"
                    android:text="@string/quote_of_the_day"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/quote"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/quoteoftheday"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn1">


                    <TextView
                        android:id="@+id/quotetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/opensansbold"
                        android:gravity="center_horizontal"
                        android:text="@string/quote_here"
                        android:textColor="#f31060" />
                </RelativeLayout>

                <Button
                    android:id="@+id/random"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/quote"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/btn1"
                    android:fontFamily="@font/opensansbold"
                    android:text="Shuffle"
                    android:textAllCaps="false" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_below="@id/quote"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="0dp"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="73dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/opensansbold"
                    android:text="@string/looking_for_more"
                    android:textColor="@color/btwhite" />


                <Button
                    android:id="@+id/attendance"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/textView"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/btn1"
                    android:fontFamily="@font/opensansbold"
                    android:text="@string/attendance"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="15dp" />


                <Button
                    android:id="@+id/leftpillar"
                    android:layout_width="15dp"
                    android:layout_height="250dp"
                    android:layout_below="@id/attendance"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="0dp"
                    android:background="#fff"/>

                <Button
                    android:layout_width="7dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/finecalc"
                    android:layout_below="@id/attendance"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="90dp"
                    android:layout_marginBottom="-1dp"
                    android:background="#fff"
                    />
                <Button
                    android:id="@+id/rightpillar"
                    android:layout_width="15dp"
                    android:layout_height="250dp"
                    android:layout_below="@id/attendance"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="50dp"
                    android:layout_marginTop="0dp"
                    android:background="#fff"/>
                <Button
                    android:layout_width="7dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/program"
                    android:layout_below="@id/attendancecalc"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="90dp"
                    android:layout_marginBottom="-1dp"
                    android:background="#fff"
                    />

                <Button
                    android:id="@+id/attendancecalc"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:layout_below="@+id/attendance"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@+id/rightpillar"
                    android:layout_toEndOf="@+id/leftpillar"
                    android:background="@drawable/btn1"
                    android:fontFamily="@font/opensansbold"
                    android:text="Attendance Calculator"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/finecalc"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:layout_above="@+id/program"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="40dp"
                    android:layout_marginEnd="60dp"
                    android:layout_toStartOf="@+id/rightpillar"
                    android:layout_toEndOf="@+id/leftpillar"
                    android:background="@drawable/btn1"
                    android:fontFamily="@font/opensansbold"
                    android:text="Fine Calculator \n (library)"
                    android:textAllCaps="false" />
                <Button
                    android:id="@+id/program"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/leftpillar"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/btn1"
                    android:fontFamily="@font/opensansbold"
                    android:text="Program hub"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/btwhite"
        app:itemTextColor="#111111"
        app:itemIconTint="#000"
        app:menu="@menu/mainmenu"
        android:layout_gravity="start">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>