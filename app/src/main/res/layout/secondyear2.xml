<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2ca37"
    tools:context=".secondyear2">
    <ImageView
        android:layout_width="1000dp"
        android:layout_height="250dp"
        android:background="@drawable/whitecircle"
        android:layout_marginTop="180dp"
        android:layout_marginStart="-300dp"
        android:layout_marginEnd="10dp"
        android:rotation="-45"/>
    <TextView
        android:id="@+id/s4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:layout_marginStart="25dp"
        android:text="@string/fourth_semester"
        android:fontFamily="@font/opensansbold"
        android:textColor="#111111"
        android:textSize="25sp" />

    <Button
        android:id="@+id/mm"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_below="@+id/s4"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/vb"
        android:background="@drawable/gradient1"
        android:text="Multimedia and Animation"
        android:fontFamily="@font/opensansbold"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/vb"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_below="@+id/s4"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/gradient2"
        android:text="Windows Programming Using VB .Net"
        android:fontFamily="@font/opensansbold"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/daa"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_below="@+id/vb"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/wt"
        android:background="@drawable/gradient3"
        android:text="Design and Analysis of Algorithm"
        android:fontFamily="@font/opensansbold"
        android:textColor="#ffffff"  />

    <Button
        android:id="@+id/la"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_below="@+id/vb"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/gradient4"
        android:text="Linux Administration"
        android:fontFamily="@font/opensansbold"
        android:textColor="#ffffff" />
    <Button
        android:id="@+id/ifa"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_below="@+id/daa"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/wt"
        android:background="@drawable/gradient5"
        android:text="Introduction to Financial Accounting"
        android:fontFamily="@font/opensansbold"
        android:textColor="#ffffff"  />

    <Button
        android:id="@+id/rmt"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_below="@+id/daa"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/gradient3"
        android:text="Resource Management Techniques"
        android:fontFamily="@font/opensansbold"
        android:textColor="#ffffff" />
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView114"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9384783085331384/5899237284">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>